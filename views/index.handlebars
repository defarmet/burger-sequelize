<h1>Burgers</h1>
<br>
<h2>Current Menu</h2>

<ul class="list-group">
	{{#each burgers}}
	{{#unless this.dataValues.devoured}}
		<li class="list-group-item">
		{{this.dataValues.burger_name}}
		<br>
		<button class="btn btn-info devour" data-id="{{this.dataValues.id}}">
			Devour
		</button>
		</li>
	{{/unless}}
	{{/each}}
</ul>
<br><br>
<h2>Add a Burger</h2>
<form id="create">
	<div class="form-group">
		<label for="burger">Burger Name:</label>
		<input type="text" id="burger" name="name">
	</div>
	<button class="btn btn-primary" type="submit">Add Burger</button>
</form>
